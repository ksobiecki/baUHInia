<Window x:Class="baUHInia.Admin.AdminRestrictionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:baUHInia.Admin"
        mc:Ignorable="d"
        Title="AdminRestrictionsWindow" Height="550" Width="820">
    <Grid  HorizontalAlignment="Left" Height="550" Margin="10,10,5,5" VerticalAlignment="Top" Width="800">

        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="580"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Column="0" Grid.Row="0" BorderBrush="#003049" BorderThickness="10" CornerRadius="10"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <ScrollViewer   VerticalAlignment="Top" MinHeight="200" MinWidth="580" Background="#eae2b7" Padding="3">
                <Grid Name="AllGameObjectsGrid" HorizontalAlignment="Left" VerticalAlignment="Top" />
            </ScrollViewer>
        </Border>

        <Border Grid.Column="0" Grid.Row="1" BorderBrush="#003049" BorderThickness="10" CornerRadius="5" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,5">
            <Button  Content="Przenieś obiekt" Foreground="White" Width="120" FontSize="16" VerticalAlignment="Center" 
                         Height="40" Background="#003049" BorderThickness="0"/>
        </Border>
        <Border Grid.Column="0" Grid.Row="2" BorderBrush="#003049" BorderThickness="10" CornerRadius="10" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <ScrollViewer  VerticalAlignment="Top" MinHeight="200" MinWidth="580" Background="#eae2b7">
                <Grid Name="AvailableForUserGameObjects" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Grid.Row="0" BorderBrush="#003049" BorderThickness="10" CornerRadius="10"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0">
            <Grid Name="SelectedGameObjectDetails" MinWidth="200" MinHeight="200" HorizontalAlignment="Left" 
                      VerticalAlignment="Top" Background="#eae2b7"/>
        </Border>

        <Border Grid.Column="1" Grid.Row="2" BorderBrush="#003049" BorderThickness="10" CornerRadius="10"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" >
            <Grid Name="AdminSaveRestrictions" MinWidth="200" MinHeight="200" HorizontalAlignment="Left" 
                      VerticalAlignment="Top" Background="#eae2b7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Budżet na tę mapę:" Width="200" FontSize="16" VerticalAlignment="Bottom" Padding="15,0,15,0"/>
                <TextBox Grid.Row="1" Name="AdminBudget" Background="#eae2b7"/>

                <Border  Grid.Row="2" BorderBrush="#003049" BorderThickness="10" CornerRadius="5" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-30,5,0,0">
                    <Button  Content="Zapisz" Foreground="White" Width="100" FontSize="16" VerticalAlignment="Center" 
                                 Height="30" Background="#003049" BorderThickness="0"/>
                </Border>
                <Border  Grid.Row="3" BorderBrush="#003049" BorderThickness="10" CornerRadius="5" 
                             HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-30,5,0,0">
                    <Button  Content="Cofnij" Foreground="White" Width="100" FontSize="16" VerticalAlignment="Center" 
                                 Height="30" Background="#003049" BorderThickness="0"/>
                </Border>


            </Grid>
        </Border>


        <Border Grid.Column="0" Grid.Row="3" BorderBrush="#003049" BorderThickness="10" CornerRadius="5" 
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,5">
            <Button Content="Cofnij" Foreground="White" Width="120" FontSize="16" VerticalAlignment="Center" 
                         Height="30" Background="#003049" BorderThickness="0"/>
        </Border>
		<Border Grid.Column="1" Grid.Row="3" BorderBrush="#003049" BorderThickness="10" CornerRadius="5"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,5,0,5">
			<Button Content="Zatwierdź" Foreground="White" Width="120" FontSize="16" VerticalAlignment="Center"
                         Height="30" Background="#003049" BorderThickness="0"/>
		</Border>


    </Grid>
</Window>
